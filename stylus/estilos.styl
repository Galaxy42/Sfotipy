@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181
a
	text-decoration none
body
	font-family "Varela Round"
	font-size 16px
	font-size 400
figure
	margin 0
.button-menu
	position absolute
	top 1.9em
	margin-top -10px
	left 0.5em
//OOCSS classes
.container
	padding 1.4rem
	font-size 0	
	text-align center
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none
	
.autor
	color gris_claro
.header
	height 3.5em
	a
		display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	width 8rem
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin 0.5em 0
	